---
import { ViewTransitions } from 'astro:transitions'
import { Icon } from '../components/ui/Icon'
import '../styles/globals.css'

export interface Props {
  title: string
  description?: string
  keywords?: string
  image?: string
}

const { title, description, keywords, image } = Astro.props
const canonicalURL = new URL(Astro.url.pathname, Astro.site)
---

<!DOCTYPE html>
<html lang="it">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
    
    <!-- SEO Meta Tags -->
    <title>{title} | CAV Costa degli Etruschi</title>
    <meta name="description" content={description || "Appartamenti vacanze a San Vincenzo, Costa degli Etruschi. Scopri i nostri bilocali e trilocali moderni e ben posizionati per una vacanza indimenticabile in Toscana."} />
    <meta name="keywords" content={keywords || "appartamenti San Vincenzo, vacanze Costa Etruschi, bilocale trilocale, affitto vacanze Toscana"} />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={`${title} | CAV Costa degli Etruschi`} />
    <meta property="og:description" content={description || "Appartamenti vacanze a San Vincenzo, Costa degli Etruschi"} />
    <meta property="og:image" content={image || "/images/og-image.jpg"} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="CAV Costa degli Etruschi" />
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} | CAV Costa degli Etruschi`} />
    <meta name="twitter:description" content={description || "Appartamenti vacanze a San Vincenzo, Costa degli Etruschi"} />
    <meta name="twitter:image" content={image || "/images/og-image.jpg"} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "LodgingBusiness",
        "name": "CAV Costa degli Etruschi",
        "description": "Appartamenti vacanze a San Vincenzo, Costa degli Etruschi",
        "url": "https://cavcostadeglietruschi.it",
        "telephone": "+39 0565 701234",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Via del Mare 123",
          "addressLocality": "San Vincenzo",
          "addressRegion": "Toscana",
          "postalCode": "57027",
          "addressCountry": "IT"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": 43.0067,
          "longitude": 10.5378
        },
        "sameAs": [
          "https://www.facebook.com/cavcostadeglietruschi",
          "https://www.instagram.com/cavcostadeglietruschi"
        ]
      }
    </script>
    
    <slot name="head" />
  </head>
  <body class="min-h-screen bg-white text-neutral-900 font-sans antialiased">
    <!-- Header -->
    <header class="bg-white shadow-sm sticky top-0 z-50">
      <div class="container-custom">
        <div class="flex items-center justify-between py-4">
          <!-- Logo -->
          <div class="flex items-center">
            <a href="/" class="flex items-center">
              <img src="/images/Logo-orizzontale.png" alt="CAV Costa degli Etruschi" class="h-10 w-auto" />
            </a>
          </div>
          
          <!-- Navigation -->
          <nav class="hidden md:flex items-center space-x-8">
            <a href="/" class="text-neutral-700 hover:text-primary-600 font-medium transition-colors">
              Home
            </a>
            <a href="/appartamenti" class="text-neutral-700 hover:text-primary-600 font-medium transition-colors">
              Appartamenti
            </a>
            <a href="/territorio" class="text-neutral-700 hover:text-primary-600 font-medium transition-colors">
              Territorio
            </a>
            <a href="/chi-siamo" class="text-neutral-700 hover:text-primary-600 font-medium transition-colors">
              Chi Siamo
            </a>
            <a href="/contatti" class="text-neutral-700 hover:text-primary-600 font-medium transition-colors">
              Contatti
            </a>
          </nav>
          
          <!-- CTA Button -->
          <div class="hidden md:flex items-center space-x-4">
            <a href="/contatti#prenotazione" class="btn-primary">
              Prenota Ora
            </a>
          </div>
          
          <!-- Mobile Menu Button -->
          <button class="md:hidden p-2 rounded-md text-neutral-700 hover:text-primary-600 hover:bg-neutral-100" aria-label="Menu">
            <Icon name="menu" size={24} />
          </button>
        </div>
      </div>
    </header>
    
    <!-- Main Content -->
    <main class="flex-1">
      <slot />
    </main>
    
    <!-- Footer -->
    <footer class="bg-neutral-900 text-white">
      <div class="container-custom">
        <div class="py-12">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <!-- Logo e Descrizione -->
            <div class="lg:col-span-2">
              <div class="flex items-center mb-4">
                <img src="/images/Logo-orizzontale.png" alt="CAV Costa degli Etruschi" class="h-10 w-auto brightness-0 invert" />
              </div>
              <p class="text-neutral-400 mb-4 max-w-md">
                Appartamenti vacanze a San Vincenzo, nel cuore della Costa degli Etruschi. Scopri la bellezza della Toscana con comfort e ospitalità.
              </p>
              <div class="flex space-x-4">
                <a href="#" class="text-neutral-400 hover:text-white transition-colors">
                  <Icon name="facebook" size={20} />
                </a>
                <a href="#" class="text-neutral-400 hover:text-white transition-colors">
                  <Icon name="instagram" size={20} />
                </a>
                <a href="#" class="text-neutral-400 hover:text-white transition-colors">
                  <Icon name="twitter" size={20} />
                </a>
              </div>
            </div>
            
            <!-- Link Utili -->
            <div>
              <h3 class="text-lg font-semibold mb-4">Link Utili</h3>
              <ul class="space-y-2">
                <li><a href="/" class="text-neutral-400 hover:text-white transition-colors">Home</a></li>
                <li><a href="/appartamenti" class="text-neutral-400 hover:text-white transition-colors">Appartamenti</a></li>
                <li><a href="/territorio" class="text-neutral-400 hover:text-white transition-colors">Territorio</a></li>
                <li><a href="/chi-siamo" class="text-neutral-400 hover:text-white transition-colors">Chi Siamo</a></li>
                <li><a href="/contatti" class="text-neutral-400 hover:text-white transition-colors">Contatti</a></li>
              </ul>
            </div>
            
            <!-- Contatti -->
            <div>
              <h3 class="text-lg font-semibold mb-4">Contatti</h3>
              <ul class="space-y-2">
                <li class="text-neutral-400">
                  <span class="block">Via del Mare 123</span>
                  <span class="block">57027 San Vincenzo (LI)</span>
                </li>
                <li class="text-neutral-400">
                  Tel: +39 0565 701234
                </li>
                <li class="text-neutral-400">
                  Email: info@cavcostadeglietruschi.it
                </li>
              </ul>
            </div>
          </div>
          
          <div class="border-t border-neutral-800 mt-8 pt-8">
            <div class="flex flex-col md:flex-row justify-between items-center">
              <p class="text-neutral-400 text-sm">
                © 2024 CAV Costa degli Etruschi. Tutti i diritti riservati.
              </p>
              <div class="flex space-x-6 mt-4 md:mt-0">
                <a href="#" class="text-neutral-400 hover:text-white text-sm transition-colors">
                  Privacy Policy
                </a>
                <a href="#" class="text-neutral-400 hover:text-white text-sm transition-colors">
                  Cookie Policy
                </a>
                <a href="#" class="text-neutral-400 hover:text-white text-sm transition-colors">
                  Termini di Servizio
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html> 