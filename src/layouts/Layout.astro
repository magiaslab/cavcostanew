      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Via della Costa",
        "addressLocality": "San Vincenzo",
        "addressRegion": "Toscana",
        "postalCode": "57027",
        "addressCountry": "IT"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": 43.0167,
        "longitude": 10.5333
      },
      "telephone": "+39 329 123 4567",
      "email": "info@cavcostadeglietruschi.it",
      "priceRange": "€50-€220",
      "starRating": {
        "@type": "Rating",
        "ratingValue": "4.8",
        "bestRating": "5"
      },
      "amenityFeature": [
        {"@type": "LocationFeatureSpecification", "name": "Wi-Fi gratuito"},
