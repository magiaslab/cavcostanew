---
import Layout from '../layouts/Layout.astro'
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '../components/ui/Card'
import { Badge } from '../components/ui/Badge'
import { Icon } from '../components/ui/Icon'
import { territorySections } from '../data/territory'

// Mock events data (da sostituire con dati reali se disponibili)
const events = [
  {
    id: 1,
    name: "Festa del Vino di Bolgheri",
    description: "Degustazione dei migliori vini della zona",
    date: "Settembre 2024",
    location: "Bolgheri",
    category: "Enogastronomia",
    image: "https://images.unsplash.com/photo-1506377247377-2a5b3b417ebb?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&q=80"
  },
  {
    id: 2,
    name: "Festival della Musica",
    description: "Concerti e spettacoli musicali",
    date: "Luglio 2024",
    location: "San Vincenzo",
    category: "Cultura",
    image: "https://images.unsplash.com/photo-1493225457124-a3eb161ffa5f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&q=80"
  },
  {
    id: 3,
    name: "Sagra del Pesce",
    description: "Specialità di pesce locale",
    date: "Agosto 2024",
    location: "Marina di Castagneto",
    category: "Gastronomia",
    image: "https://images.unsplash.com/photo-1544551763-46a013bb70d5?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&q=80"
  },
  {
    id: 4,
    name: "Mercatino dell'Antiquariato",
    description: "Oggetti d'epoca e artigianato locale",
    date: "Ogni domenica",
    location: "Suvereto",
    category: "Shopping",
    image: "https://images.unsplash.com/photo-1441986300917-64674bd600d8?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&q=80"
  }
]
---

<Layout 
  title="Territorio"
  description="Scopri la Costa degli Etruschi: cultura, gastronomia e natura in Toscana. Attrazioni, eventi e consigli per esplorare San Vincenzo e dintorni."
  keywords="Costa degli Etruschi, San Vincenzo territorio, attrazioni Toscana, cultura etrusca, gastronomia toscana, natura Maremma"
>
  <!-- Dati Strutturati per Destinazione Turistica -->
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "TouristDestination",
      "name": "Costa degli Etruschi - San Vincenzo",
      "description": "Scopri la Costa degli Etruschi: un territorio ricco di storia, cultura e bellezze naturali in Toscana.",
      "url": "https://cavcostadeglietruschi.it/territorio",
      "image": "https://images.unsplash.com/photo-1523906834658-6e24ef2386f9?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1200&q=80",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "San Vincenzo",
        "addressRegion": "Toscana",
        "addressCountry": "IT"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": 43.0067,
        "longitude": 10.5378
      },
      "touristType": ["FamilyFriendly", "Cultural", "Beach", "Nature"],
      "includesAttraction": [
        ${territorySections.flatMap(section => 
          section.items.map(item => `
            {
              "@type": "TouristAttraction",
              "name": "${item.name}",
              "description": "${item.description}"
            }
          `).join(',')
        ).join(',')}
      ]
    }
  </script>
  
  <!-- Hero Section -->
  <section class="relative h-96 flex items-center justify-center overflow-hidden">
    <!-- Video Background -->
    <div class="absolute inset-0 w-full h-full">
      <video 
        class="w-full h-full object-cover" 
        autoplay 
        muted 
        loop 
        playsinline
        poster="https://images.unsplash.com/photo-1523906834658-6e24ef2386f9?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1200&q=80"
      >
        <source src="https://player.vimeo.com/external/194837908.sd.mp4?s=c350076905b61409c687728326955ff0c0b49c2d&profile_id=164&oauth2_token_id=57447761" type="video/mp4">
        <!-- Fallback per browser che non supportano video -->
        <img 
          src="https://images.unsplash.com/photo-1523906834658-6e24ef2386f9?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1200&q=80"
          alt="Costa degli Etruschi panorama"
          class="w-full h-full object-cover"
        />
      </video>
    </div>
    
    <!-- Overlay per migliorare la leggibilità -->
    <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/40 to-black/70"></div>
    
    <!-- Contenuto Hero -->
    <div class="relative z-10 text-center text-white max-w-4xl mx-auto px-4">
      <div class="bg-black/60 backdrop-blur-md rounded-2xl p-8 border border-white/20">
        <h1 class="text-4xl md:text-5xl font-heading font-black mb-4 text-white leading-tight">
          Scopri la <span class="text-accent-400">Costa degli Etruschi</span>
        </h1>
        <p class="text-xl md:text-2xl font-medium text-white/90">
          Un territorio ricco di storia, cultura e bellezze naturali
        </p>
      </div>
    </div>
  </section>

  <!-- Breadcrumb -->
  <nav class="bg-neutral-100 py-4">
    <div class="container-custom">
      <div class="flex items-center space-x-2 text-sm text-neutral-600">
        <a href="/" class="hover:text-primary-600">Home</a>
        <span>›</span>
        <span class="text-neutral-900">Territorio</span>
      </div>
    </div>
  </nav>

  <!-- Sezioni Territorio -->
  {territorySections.map((section) => (
    <section class="section-padding bg-neutral-50">
      <div class="container-custom">
        <div class="text-center mb-16">
          <div class={`w-20 h-20 bg-${section.color}-600 rounded-full flex items-center justify-center mx-auto mb-6`}>
            <Icon name={section.icon} size={40} color="white" />
          </div>
          <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4 text-neutral-900">
            {section.title}
          </h2>
          <p class="text-lg text-neutral-600 max-w-2xl mx-auto">
            {section.description}
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {section.items.map((item) => (
            <Card className="card-hover shadow-medium border-2 border-neutral-100 overflow-hidden">
              <div class="relative h-48 overflow-hidden">
                <img 
                  src={item.image} 
                  alt={item.name}
                  class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
                />
                <div class="absolute top-4 left-4">
                  <Badge variant="accent" className="text-xs">
                    {item.category}
                  </Badge>
                </div>
              </div>
              <CardHeader>
                <CardTitle className="text-xl">
                  {item.name}
                </CardTitle>
                <CardDescription>
                  {item.description}
                </CardDescription>
              </CardHeader>
              <CardContent>
                <div class="flex items-center justify-between mb-4">
                  <div class="flex items-center space-x-2 text-sm text-neutral-600">
                    <Icon name="location" size={16} />
                    <span>{item.distance}</span>
                  </div>
                </div>
                
                <div class="space-y-2 mb-4">
                  {item.highlights.slice(0, 3).map((highlight) => (
                    <div class="flex items-center space-x-2 text-sm text-neutral-600">
                      <Icon name="check" size={16} color="#007184" />
                      <span>{highlight}</span>
                    </div>
                  ))}
                </div>
                
                <div class="flex items-center justify-between">
                  <div class="flex items-center space-x-1">
                    {Array.from({ length: 5 }).map((_, i) => (
                      <Icon name="star" size={16} color={i < 4 ? "#FA821F" : "#E5E7EB"} />
                    ))}
                  </div>
                  <button class="btn-outline btn-sm">
                    Scopri di più
                  </button>
                </div>
              </CardContent>
            </Card>
          ))}
        </div>
      </div>
    </section>
  ))}

  <!-- Eventi Locali -->
  <section class="section-padding bg-gradient-to-br from-accent-50 to-accent-100">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4 text-neutral-900">
          Eventi e Manifestazioni
        </h2>
        <p class="text-lg text-neutral-600 max-w-2xl mx-auto">
          Scopri gli eventi che animano la Costa degli Etruschi durante tutto l'anno
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {events.map((event) => (
          <Card className="card-hover shadow-medium border-2 border-white/50 overflow-hidden">
            <div class="relative h-40 overflow-hidden">
              <img 
                src={event.image} 
                alt={event.name}
                class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
              />
              <div class="absolute top-4 left-4">
                <Badge variant="accent" className="text-xs">
                  {event.category}
                </Badge>
              </div>
            </div>
            <CardHeader className="pb-3">
              <CardTitle className="text-lg">
                {event.name}
              </CardTitle>
              <CardDescription className="text-sm">
                {event.description}
              </CardDescription>
            </CardHeader>
            <CardContent className="pt-0">
              <div class="flex items-center space-x-2 text-sm text-neutral-600 mb-3">
                <Icon name="clock" size={16} />
                <span>{event.date}</span>
              </div>
              <div class="flex items-center space-x-2 text-sm text-neutral-600">
                <Icon name="location" size={16} />
                <span>{event.location}</span>
              </div>
            </CardContent>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Vantaggi Posizione -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4 text-neutral-900">
          Vantaggi della Nostra Posizione
        </h2>
        <p class="text-lg text-neutral-600 max-w-2xl mx-auto">
          San Vincenzo è il punto di partenza ideale per esplorare la Costa degli Etruschi
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- Vicinanza al Mare -->
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <Icon name="waves" size={32} color="white" />
          </div>
          <h3 class="text-xl font-semibold mb-2 text-neutral-900">Vicinanza al Mare</h3>
          <p class="text-neutral-600 text-sm">
            A soli 50 metri dalle spiagge più belle della Costa degli Etruschi
          </p>
        </div>

        <!-- Trasporti -->
        <div class="text-center">
          <div class="w-16 h-16 bg-accent-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <Icon name="car" size={32} color="white" />
          </div>
          <h3 class="text-xl font-semibold mb-2 text-neutral-900">Trasporti Comodi</h3>
          <p class="text-neutral-600 text-sm">
            Collegamento facile con tutte le principali attrazioni della zona
          </p>
        </div>

        <!-- Servizi -->
        <div class="text-center">
          <div class="w-16 h-16 bg-success-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <Icon name="building" size={32} color="white" />
          </div>
          <h3 class="text-xl font-semibold mb-2 text-neutral-900">Servizi Completi</h3>
          <p class="text-neutral-600 text-sm">
            Ristoranti, negozi e servizi essenziali a portata di mano
          </p>
        </div>

        <!-- Assistenza -->
        <div class="text-center">
          <div class="w-16 h-16 bg-warning-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <Icon name="phone" size={32} color="white" />
          </div>
          <h3 class="text-xl font-semibold mb-2 text-neutral-900">Assistenza Locale</h3>
          <p class="text-neutral-600 text-sm">
            Il nostro staff locale ti aiuterà a scoprire i tesori nascosti
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Consigli di Viaggio -->
  <section class="section-padding bg-neutral-50">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4 text-neutral-900">
          Consigli per il Tuo Soggiorno
        </h2>
        <p class="text-lg text-neutral-600 max-w-2xl mx-auto">
          Suggerimenti utili per vivere al meglio la tua esperienza sulla Costa degli Etruschi
        </p>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Quando Visitare -->
        <div class="space-y-6">
          <h3 class="text-2xl font-heading font-bold text-neutral-900 mb-6">
            Quando Visitare
          </h3>
          
          <div class="space-y-4">
            <div class="flex items-start space-x-3">
              <Icon name="sun" size={20} color="#007184" className="mt-1" />
              <div>
                <h4 class="font-semibold text-neutral-900">Primavera (Marzo-Maggio)</h4>
                <p class="text-neutral-600 text-sm">
                  Clima mite, perfetto per escursioni e visite culturali. Meno affollato.
                </p>
              </div>
            </div>
            
            <div class="flex items-start space-x-3">
              <Icon name="waves" size={20} color="#007184" className="mt-1" />
              <div>
                <h4 class="font-semibold text-neutral-900">Estate (Giugno-Agosto)</h4>
                <p class="text-neutral-600 text-sm">
                  Stagione balneare ideale. Mare caldo e tanti eventi estivi.
                </p>
              </div>
            </div>
            
            <div class="flex items-start space-x-3">
              <Icon name="wine" size={20} color="#007184" className="mt-1" />
              <div>
                <h4 class="font-semibold text-neutral-900">Autunno (Settembre-Novembre)</h4>
                <p class="text-neutral-600 text-sm">
                  Stagione del vino e sapori autunnali. Clima ancora gradevole.
                </p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Cosa Portare -->
        <div class="space-y-6">
          <h3 class="text-2xl font-heading font-bold text-neutral-900 mb-6">
            Cosa Portare
          </h3>
          
          <div class="space-y-4">
            <div class="flex items-start space-x-3">
              <Icon name="check" size={20} color="#FA821F" className="mt-1" />
              <div>
                <h4 class="font-semibold text-neutral-900">Abbigliamento Comodo</h4>
                <p class="text-neutral-600 text-sm">
                  Vestiti leggeri per il mare e scarpe comode per le escursioni.
                </p>
              </div>
            </div>
            
            <div class="flex items-start space-x-3">
              <Icon name="check" size={20} color="#FA821F" className="mt-1" />
              <div>
                <h4 class="font-semibold text-neutral-900">Protezione Solare</h4>
                <p class="text-neutral-600 text-sm">
                  Crema solare, cappello e occhiali da sole sono essenziali.
                </p>
              </div>
            </div>
            
            <div class="flex items-start space-x-3">
              <Icon name="check" size={20} color="#FA821F" className="mt-1" />
              <div>
                <h4 class="font-semibold text-neutral-900">Macchina Fotografica</h4>
                <p class="text-neutral-600 text-sm">
                  Per immortalare i meravigliosi paesaggi della Costa degli Etruschi.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section-padding bg-gradient-to-br from-primary-600 to-primary-800">
    <div class="container-custom">
      <div class="text-center text-white">
        <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4">
          Scopri la Costa degli Etruschi
        </h2>
        <p class="text-lg mb-8 max-w-2xl mx-auto opacity-90">
          Prenota ora il tuo soggiorno e immergiti nella bellezza di questo territorio unico
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/contatti#prenotazione"
            class="btn-accent btn-lg font-semibold"
          >
            Prenota Ora
          </a>
          <a 
            href="/appartamenti"
            class="btn-outline-white btn-lg"
          >
            Scegli il Tuo Appartamento
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout> 