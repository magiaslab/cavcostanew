<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Apartment",
  "name": "{apartment.name}",
  "description": "{apartment.description}",
  "floorSize": {
    "@type": "QuantitativeValue",
    "value": {apartment.size},
    "unitText": "m²"
  },
  "numberOfRooms": {apartment.capacity.bedrooms},
  "occupancy": {
    "@type": "QuantitativeValue",
    "maxValue": {apartment.capacity.guests}
  },
  "amenityFeature": [
    {apartment.amenities.map(amenity => `"${amenity}"`).join(', ')}
  ],
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "San Vincenzo",
    "addressRegion": "Toscana",
    "addressCountry": "IT"
  },
  "offers": {
    "@type": "Offer",
    "priceRange": "€{apartment.price.low}-€{apartment.price.high}",
    "priceCurrency": "EUR"
  },
  "image": [
    "{apartment.images.main}",
    {apartment.images.gallery.map(img => `"${img}"`).join(', ')}
  ]
}
</script> 