---
import Layout from '../layouts/Layout.astro'
import { Card, CardContent, CardHeader, CardTitle } from '../components/ui/Card'
import { Icon } from '../components/ui/Icon'
---

<Layout 
  title="Contatti"
  description="Contattaci per prenotare il tuo soggiorno negli appartamenti CAV Costa degli Etruschi a San Vincenzo. Telefono, email e modulo di contatto disponibili."
  keywords="contatti CAV, prenotazione appartamenti San Vincenzo, telefono appartamenti vacanze, email Costa Etruschi"
>
  <!-- Dati Strutturati Contatti -->
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "CAV Costa degli Etruschi",
      "description": "Appartamenti vacanze a San Vincenzo, Costa degli Etruschi",
      "url": "https://cavcostadeglietruschi.it/contatti",
      "telephone": "+39 0565 701234",
      "email": "info@cavcostadeglietruschi.it",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Via del Mare 123",
        "addressLocality": "San Vincenzo",
        "addressRegion": "Toscana",
        "postalCode": "57027",
        "addressCountry": "IT"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": 43.0067,
        "longitude": 10.5378
      },
      "openingHours": "Mo-Su 09:00-19:00",
      "sameAs": [
        "https://www.facebook.com/cavcostadeglietruschi",
        "https://www.instagram.com/cavcostadeglietruschi"
      ]
    }
  </script>
  
  <!-- Hero Section -->
  <section class="relative h-96 flex items-center justify-center overflow-hidden">
    <!-- Video Background -->
    <div class="absolute inset-0 w-full h-full">
      <video 
        class="w-full h-full object-cover" 
        autoplay 
        muted 
        loop 
        playsinline
        poster="https://images.unsplash.com/photo-1486312338219-ce68d2c6f44d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1200&q=80"
      >
        <source src="https://player.vimeo.com/external/194837908.sd.mp4?s=c350076905b61409c687728326955ff0c0b49c2d&profile_id=164&oauth2_token_id=57447761" type="video/mp4">
        <!-- Fallback per browser che non supportano video -->
        <img 
          src="https://images.unsplash.com/photo-1486312338219-ce68d2c6f44d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1200&q=80"
          alt="Contatti CAV Costa degli Etruschi"
          class="w-full h-full object-cover"
        />
      </video>
    </div>
    
    <!-- Overlay per migliorare la leggibilità -->
    <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/40 to-black/70"></div>
    
    <!-- Contenuto Hero -->
    <div class="relative z-10 text-center text-white max-w-4xl mx-auto px-4">
      <div class="bg-black/60 backdrop-blur-md rounded-2xl p-8 border border-white/20">
        <h1 class="text-4xl md:text-5xl font-heading font-black mb-4 text-white leading-tight">
          Contattaci
        </h1>
        <p class="text-xl md:text-2xl font-medium text-white/90">
          Siamo qui per aiutarti a organizzare la tua vacanza perfetta
        </p>
      </div>
    </div>
  </section>

  <!-- Breadcrumb -->
  <nav class="bg-neutral-100 py-4">
    <div class="container-custom">
      <div class="flex items-center space-x-2 text-sm text-neutral-600">
        <a href="/" class="hover:text-primary-600">Home</a>
        <span>›</span>
        <span class="text-neutral-900">Contatti</span>
      </div>
    </div>
  </nav>

  <!-- Informazioni di Contatto -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4 text-neutral-900">
          Come Raggiungerci
        </h2>
        <p class="text-lg text-neutral-600 max-w-2xl mx-auto">
          Siamo a tua disposizione per qualsiasi informazione o prenotazione
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Telefono -->
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <Icon name="phone" size={32} color="white" />
          </div>
          <h3 class="text-xl font-semibold mb-2 text-neutral-900">Telefono</h3>
          <p class="text-neutral-600 mb-2">
            Chiamaci per informazioni e prenotazioni
          </p>
          <a 
            href="tel:+390565701234" 
            class="text-primary-600 hover:text-primary-800 font-medium"
          >
            +39 0565 701234
          </a>
        </div>

        <!-- Email -->
        <div class="text-center">
          <div class="w-16 h-16 bg-accent-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <Icon name="mail" size={32} color="white" />
          </div>
          <h3 class="text-xl font-semibold mb-2 text-neutral-900">Email</h3>
          <p class="text-neutral-600 mb-2">
            Scrivici per domande e richieste
          </p>
          <a 
            href="mailto:info@cavcostadeglietruschi.it" 
            class="text-primary-600 hover:text-primary-800 font-medium"
          >
            info@cavcostadeglietruschi.it
          </a>
        </div>

        <!-- Indirizzo -->
        <div class="text-center">
          <div class="w-16 h-16 bg-success-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <Icon name="location" size={32} color="white" />
          </div>
          <h3 class="text-xl font-semibold mb-2 text-neutral-900">Indirizzo</h3>
          <p class="text-neutral-600 mb-2">
            Vieni a trovarci direttamente
          </p>
          <address class="text-primary-600 not-italic">
            Via del Mare 123<br>
            57027 San Vincenzo (LI)
          </address>
        </div>
      </div>
    </div>
  </section>

  <!-- Modulo di Contatto -->
  <section class="section-padding bg-neutral-50" id="prenotazione">
    <div class="container-custom">
      <div class="max-w-2xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4 text-neutral-900">
            Richiedi Informazioni
          </h2>
          <p class="text-lg text-neutral-600">
            Compila il modulo per ricevere informazioni dettagliate sui nostri appartamenti
          </p>
        </div>

        <Card className="shadow-medium border-2 border-neutral-200">
          <CardHeader>
            <CardTitle className="text-2xl text-center">
              Modulo di Contatto
            </CardTitle>
          </CardHeader>
          <CardContent>
            <form class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="nome" class="block text-sm font-medium text-neutral-700 mb-2">
                    Nome *
                  </label>
                  <input 
                    type="text" 
                    id="nome" 
                    name="nome" 
                    required 
                    class="w-full px-3 py-2 border border-neutral-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                  />
                </div>
                
                <div>
                  <label for="cognome" class="block text-sm font-medium text-neutral-700 mb-2">
                    Cognome *
                  </label>
                  <input 
                    type="text" 
                    id="cognome" 
                    name="cognome" 
                    required 
                    class="w-full px-3 py-2 border border-neutral-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                  />
                </div>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="email" class="block text-sm font-medium text-neutral-700 mb-2">
                    Email *
                  </label>
                  <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required 
                    class="w-full px-3 py-2 border border-neutral-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                  />
                </div>
                
                <div>
                  <label for="telefono" class="block text-sm font-medium text-neutral-700 mb-2">
                    Telefono
                  </label>
                  <input 
                    type="tel" 
                    id="telefono" 
                    name="telefono" 
                    class="w-full px-3 py-2 border border-neutral-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                  />
                </div>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="checkin" class="block text-sm font-medium text-neutral-700 mb-2">
                    Data Check-in
                  </label>
                  <input 
                    type="date" 
                    id="checkin" 
                    name="checkin" 
                    class="w-full px-3 py-2 border border-neutral-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                  />
                </div>
                
                <div>
                  <label for="checkout" class="block text-sm font-medium text-neutral-700 mb-2">
                    Data Check-out
                  </label>
                  <input 
                    type="date" 
                    id="checkout" 
                    name="checkout" 
                    class="w-full px-3 py-2 border border-neutral-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                  />
                </div>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="ospiti" class="block text-sm font-medium text-neutral-700 mb-2">
                    Numero Ospiti
                  </label>
                  <select 
                    id="ospiti" 
                    name="ospiti" 
                    class="w-full px-3 py-2 border border-neutral-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                  >
                    <option value="">Seleziona...</option>
                    <option value="1">1 persona</option>
                    <option value="2">2 persone</option>
                    <option value="3">3 persone</option>
                    <option value="4">4 persone</option>
                    <option value="5">5 persone</option>
                    <option value="6">6+ persone</option>
                  </select>
                </div>
                
                <div>
                  <label for="appartamento" class="block text-sm font-medium text-neutral-700 mb-2">
                    Tipo Appartamento
                  </label>
                  <select 
                    id="appartamento" 
                    name="appartamento" 
                    class="w-full px-3 py-2 border border-neutral-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                  >
                    <option value="">Seleziona...</option>
                    <option value="monolocale">Monolocale</option>
                    <option value="bilocale">Bilocale</option>
                    <option value="trilocale">Trilocale</option>
                    <option value="quadrilocale">Quadrilocale</option>
                  </select>
                </div>
              </div>

              <div>
                <label for="messaggio" class="block text-sm font-medium text-neutral-700 mb-2">
                  Messaggio
                </label>
                <textarea 
                  id="messaggio" 
                  name="messaggio" 
                  rows="4" 
                  class="w-full px-3 py-2 border border-neutral-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                  placeholder="Scrivi qui la tua richiesta..."
                ></textarea>
              </div>

              <div class="flex items-center">
                <input 
                  type="checkbox" 
                  id="privacy" 
                  name="privacy" 
                  required 
                  class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-neutral-300 rounded"
                />
                <label for="privacy" class="ml-2 block text-sm text-neutral-700">
                  Accetto la <a href="#" class="text-primary-600 hover:text-primary-800">privacy policy</a> *
                </label>
              </div>

              <div class="text-center">
                <button 
                  type="submit" 
                  class="btn-primary btn-lg w-full md:w-auto px-8"
                >
                  Invia Richiesta
                </button>
              </div>
            </form>
          </CardContent>
        </Card>
      </div>
    </div>
  </section>

  <!-- Processo di Prenotazione -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4 text-neutral-900">
          Come Funziona la Prenotazione
        </h2>
        <p class="text-lg text-neutral-600 max-w-2xl mx-auto">
          Semplice e veloce: ecco i passaggi per prenotare il tuo appartamento
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <!-- Passo 1 -->
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-white font-bold text-xl">1</span>
          </div>
          <h3 class="text-xl font-semibold mb-2 text-neutral-900">Contattaci</h3>
          <p class="text-neutral-600 text-sm">
            Invia una richiesta tramite il modulo o chiamaci direttamente
          </p>
        </div>

        <!-- Passo 2 -->
        <div class="text-center">
          <div class="w-16 h-16 bg-accent-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-white font-bold text-xl">2</span>
          </div>
          <h3 class="text-xl font-semibold mb-2 text-neutral-900">Ricevi Offerta</h3>
          <p class="text-neutral-600 text-sm">
            Ti invieremo una proposta personalizzata con prezzi e disponibilità
          </p>
        </div>

        <!-- Passo 3 -->
        <div class="text-center">
          <div class="w-16 h-16 bg-success-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-white font-bold text-xl">3</span>
          </div>
          <h3 class="text-xl font-semibold mb-2 text-neutral-900">Conferma</h3>
          <p class="text-neutral-600 text-sm">
            Conferma la prenotazione con un acconto del 30%
          </p>
        </div>

        <!-- Passo 4 -->
        <div class="text-center">
          <div class="w-16 h-16 bg-warning-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-white font-bold text-xl">4</span>
          </div>
          <h3 class="text-xl font-semibold mb-2 text-neutral-900">Check-in</h3>
          <p class="text-neutral-600 text-sm">
            Presentati il giorno dell'arrivo e inizia la tua vacanza
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Mappa e Indicazioni -->
  <section class="section-padding bg-neutral-50">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4 text-neutral-900">
          Dove Siamo
        </h2>
        <p class="text-lg text-neutral-600 max-w-2xl mx-auto">
          San Vincenzo, nel cuore della Costa degli Etruschi
        </p>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Mappa -->
        <div class="bg-white rounded-lg shadow-medium p-4">
          <div class="aspect-video bg-neutral-200 rounded-lg flex items-center justify-center">
            <p class="text-neutral-500">
              [Mappa interattiva di San Vincenzo]
            </p>
          </div>
          <div class="mt-4 text-center">
            <a 
              href="https://maps.google.com/maps?q=San+Vincenzo,+LI" 
              target="_blank" 
              rel="noopener noreferrer"
              class="btn-primary btn-sm"
            >
              Apri in Google Maps
            </a>
          </div>
        </div>
        
        <!-- Indicazioni -->
        <div class="space-y-6">
          <h3 class="text-2xl font-heading font-bold text-neutral-900">
            Come Raggiungerci
          </h3>
          
          <div class="space-y-4">
            <div class="flex items-start space-x-3">
              <Icon name="car" size={24} color="#007184" className="mt-1" />
              <div>
                <h4 class="font-semibold text-neutral-900">In Auto</h4>
                <p class="text-neutral-600 text-sm">
                  Autostrada A12 Roma-Genova, uscita Rosignano. Seguire le indicazioni per San Vincenzo.
                </p>
              </div>
            </div>
            
            <div class="flex items-start space-x-3">
              <Icon name="building" size={24} color="#007184" className="mt-1" />
              <div>
                <h4 class="font-semibold text-neutral-900">In Treno</h4>
                <p class="text-neutral-600 text-sm">
                  Stazione ferroviaria di Campiglia Marittima, poi autobus per San Vincenzo.
                </p>
              </div>
            </div>
            
            <div class="flex items-start space-x-3">
              <Icon name="waves" size={24} color="#007184" className="mt-1" />
              <div>
                <h4 class="font-semibold text-neutral-900">In Aereo</h4>
                <p class="text-neutral-600 text-sm">
                  Aeroporto di Pisa (70 km) o Firenze (120 km). Noleggio auto disponibile.
                </p>
              </div>
            </div>
          </div>
          
          <div class="bg-accent-50 rounded-lg p-4 border border-accent-200">
            <h4 class="font-semibold text-neutral-900 mb-2">Orari di Arrivo</h4>
            <p class="text-neutral-700 text-sm">
              Check-in: 15:00 - 19:00<br>
              Check-out: 08:00 - 10:00
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section-padding bg-gradient-to-br from-primary-600 to-primary-800">
    <div class="container-custom">
      <div class="text-center text-white">
        <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4">
          Pronto a Prenotare?
        </h2>
        <p class="text-lg mb-8 max-w-2xl mx-auto opacity-90">
          Non aspettare! Contattaci subito per verificare la disponibilità e assicurarti le migliori tariffe
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="tel:+390565701234"
            class="btn-accent btn-lg font-semibold"
          >
            Chiama Ora
          </a>
          <a 
            href="/appartamenti"
            class="btn-outline-white btn-lg"
          >
            Scegli l'Appartamento
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout> 